<div class="aaa">

<div class="con">
<div class="container">
<div class="row">
<center><%= link_to "Добавить новое объявление", new_item_path, class: "btn btn-primary active btn-block btn-lg" %></center>

<% @items.each do |item| %></center></br>
  
    <div class="thumbnail">
    <center><h1><%= link_to item.name, item_path(item.id) %></h1>
      
        </br><p><%= link_to image_tag(item.image.url, width: 300, height: 300),item_path(item.id) %></p> 


  <p><%= image_tag(item.user.avatar.url, width: 30, height: 30) %>

  <span style="color: green;">Автор:<%= item.user.nickname %></span>

  <span style="color: red;">| Раздел:<%= item.category.name%></span></p>


  <% if current_user != nil and current_user.id == item.user_id %></p>

    <p><span style="color: #38678b;">

  <%= link_to "Редактировать",  edit_item_path(item.id), class: "btn btn-primary active" %>

  <%= link_to "Удалить", item_path(item.id), class: "btn btn-primary active", data: {confirm: 'Are you sure?'}, method: :delete %>
 </span></p>
       </center>
      
   
  <%end%>
</div>

<%end%> 

</div>
